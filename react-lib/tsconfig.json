{
	"compilerOptions": {
		"jsx": "react",
		"target": "ES2018",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"isolatedDeclarations": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "bunup.config.ts"]
}
